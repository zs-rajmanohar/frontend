pipeline {
  agent any

  stages {

    stage('prepare artifacts') {
      steps {
        sh '''
          zip -r frontend.zip *
        '''
      }
    }

    stage('upload artifacts') {
      steps {
        sh '''
          curl -v -u admin:admin123 --upload-file frontend.zip http://localhost:8081/repositories/frontend/frontend.zip
        '''
      }
    }
  }
}
